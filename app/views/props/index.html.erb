<h1>Listing properties</h1>

<table>
  <tr>
    <th>Object ID</th>
    <th>Key</th>
    <th>Value</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @properties.each do |prop| %>
  <tr>
    <td><%= prop.card.id %></td>
    <td><%= prop.k %></td>
    <td><%= prop.v %></td>
    <td><%= link_to 'Show', prop %></td>
    <td><%= link_to 'Edit', edit_prop_path(prop) %></td>
    <td><%= link_to 'Destroy', prop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

